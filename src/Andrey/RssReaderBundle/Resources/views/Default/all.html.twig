{% extends 'AndreyRssReaderBundle:Default:base.html.twig' %}
{% block body %}
    {% for itemNews in allNews %}
        <div class="itemNews">
            <h3>
                <a href="http://symfony/rss_reader/news/{{ itemNews.id }}">{{ itemNews.title }}</a>
            </h3>
            <p>
                Все новости по источнику: <a href="http://symfony/rss_reader/sourcenews/id/{{ itemNews.chanelId }}/page/1">{{ itemNews.link }}</a>
            </p>
            <p>{{ itemNews.pubDate }}</p>
        </div>
    {% endfor %}
{% endblock %}